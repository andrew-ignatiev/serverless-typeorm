{
  "name": "nestjs-microservices",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "sls:deploy": "sls deploy",
    "sls:offline": "sls offline",
    "sls:package": "sls package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --runInBand",
    "test:ci": "node --expose-gc node_modules/.bin/jest --config=jest.config-ci.js --runInBand --log-heap-usage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/cache/test/jest-e2e.json",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@aws-crypto/crc32": "^2.0.1",
    "@nestjs/common": "^8.2.4",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.4",
    "@nestjs/microservices": "^8.2.4",
    "@nestjs/platform-express": "^8.2.4",
    "@nestjs/platform-fastify": "^8.2.4",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/typeorm": "^8.1.4",
    "@nestjs/websockets": "^8.2.4",
    "aws-lambda": "^1.0.7",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mysql2": "^2.3.3",
    "pony-cause": "^2.1.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.1",
    "serverless-http": "^2.7.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.8",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.4",
    "@types/aws-lambda": "^8.10.89",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "better-sqlite3": "^7.5.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "mocked-env": "^1.3.5",
    "prettier": "^2.5.1",
    "serverless": "^2.72.3",
    "serverless-apigateway-log-retention": "^0.0.6",
    "serverless-associate-waf": "^1.2.1",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-domain-manager": "^6.1.0",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-offline": "^8.8.1",
    "serverless-plugin-aws-alerts": "^1.7.5",
    "serverless-scriptable-plugin": "^1.2.2",
    "serverless-stack-termination-protection": "^2.0.2",
    "serverless-webpack": "^5.10.0",
    "supertest": "^6.1.6",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.5.4",
    "webpack": "^5.74.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/types/**",
      "!**/mocks/**",
      "!**/*spec.(t|j)s",
      "!**/lambda.(t|j)s",
      "!**/src/main.(t|j)s",
      "!**/src/index.(t|j)s",
      "!**/interfaces/**",
      "!**/migrations/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app-libs/sls(|/.*)$": "<rootDir>/libs/sls/src/$1",
      "^@app-libs/aws(|/.*)$": "<rootDir>/libs/aws/src/$1",
      "^@app-libs/api(|/.*)$": "<rootDir>/libs/api/src/$1",
      "^@app-libs/orm(|/.*)$": "<rootDir>/libs/orm/src/$1"
    }
  }
}
